# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,xml,csproj,config}]
indent_size = 2
tab_width = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
